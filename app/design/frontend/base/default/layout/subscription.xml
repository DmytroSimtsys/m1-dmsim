<?xml version="1.0"?>
<layout version="0.0.1">
    <subscription_index_index>
        <reference name="head">
            <action method="addCss">
                <stylesheet>css/amasty/subscribe/form.css</stylesheet>
            </action>

            <action method="addItem">
                <type>skin_js</type>
                <name>js/amasty/validator.js</name>
            </action>

        </reference>
        <reference name="root">
            <action method="setTemplate">
                <template>page/1column.phtml</template>
            </action>
        </reference>
        <reference name="content">
            <block type="subscription/index" name="subscription_index" template="opsway/subscription/index.phtml"/>
        </reference>
    </subscription_index_index>
</layout>
	