<?xml version="1.0"?>
<config>
    <tabs>
        <ordered translate="label" module="opsway_orderedproducts/orderedproducts">
            <label>Orderedproducts Configuration Tab</label>
            <sort_order>1</sort_order>
        </ordered>
    </tabs>

    <sections>
        <ordered_options translate="label" module="opsway_orderedproducts/orderedproducts">
            <label>Orderedproducts Configuration Settings</label>
            <tab>orderedproducts</tab>
            <frontend_type>text</frontend_type>
            <sort_order>1</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <section_one translate="label">
                    <label>Section One</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <orderedproducts_field_one>
                            <label>Count of products in block</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>1</sort_order>
                            <show_in_default>5</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Count of products</comment>
                        </orderedproducts_field_one>
                    </fields>


                    <frontend_type>text</frontend_type>
                    <sort_order>2</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <custom_field_two>
                            <label>Show block on frontend</label>
                            <frontend_type>select</frontend_type>
                            <source_model>opsway_orderedproducts/options</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>2</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Select one value</comment>
                        </custom_field_two>
                    </fields>
                </section_one>
            </groups>
        </ordered_options>
    </sections>
</config>